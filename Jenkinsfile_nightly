#!groovy

properties([
  pipelineTriggers([cron('H 02 * * *')]),
  parameters([
    string(name: 'ENVIRONMENT', defaultValue: 'aat', description: 'Environment to test')
  ])
])

@Library("Infrastructure")

def type = "nodejs"
def product = "idam"
def component = "user-dashboard"

def secrets = [
  "idam-idam-${params.ENVIRONMENT}": [
    secret('smoke-test-user-username', 'SMOKE_TEST_USER_USERNAME'),
    secret('smoke-test-user-password', 'SMOKE_TEST_USER_PASSWORD')
  ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   version    : '',
   envVariable: envVar
  ]
}

withNightlyPipeline(type, product, component) {
  loadVaultSecrets(secrets)
  enableFortifyScan('idam-idam-' + params.ENVIRONMENT)
  enableFullFunctionalTest()
  enableCrossBrowserTest()


  after('fortify-scan') {
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/Fortify Scan/**/*'
  }

  after('fullFunctionalTest') {
    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/functional/reports/allure",
      reportFiles          : "index.html",
      reportName           : "Functional Test Report"
    ]
  }

  after('crossBrowserTest') {
    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/cross-browser/reports/webkit_1/allure",
      reportFiles          : "index.html",
      reportName           : "Cross Browser Test Report (webkit_mac_latest)"
    ]

    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/cross-browser/reports/chromium_2/allure",
      reportFiles          : "index.html",
      reportName           : "Cross Browser Test Report (chromium_win_latest)"
    ]

    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/cross-browser/reports/chromium_3/allure",
      reportFiles          : "index.html",
      reportName           : "Cross Browser Test Report (chromium_mac_latest)"
    ]

    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/cross-browser/reports/firefox_4/allure",
      reportFiles          : "index.html",
      reportName           : "Cross Browser Test Report (firefox_win_latest)"
    ]

    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/cross-browser/reports/firefox_5/allure",
      reportFiles          : "index.html",
      reportName           : "Cross Browser Test Report (firefox_mac_latest)"
    ]
  }
}
