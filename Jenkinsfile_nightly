#!groovy

properties([
  pipelineTriggers([cron('H 02 * * *')]),
  parameters([
    string(name: 'ENVIRONMENT', defaultValue: 'aat', description: 'Environment to test')
  ])
])

@Library("Infrastructure")

def type = "nodejs"
def product = "idam"
def component = "user-dashboard"

def secrets = [
  "idam-idam-${params.ENVIRONMENT}": [
    secret('notify-api-key', 'NOTIFY_API_KEY')
  ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   version    : '',
   envVariable: envVar
  ]
}

withNightlyPipeline(type, product, component) {
  loadVaultSecrets(secrets)
  enableFortifyScan('idam-idam-' + params.ENVIRONMENT)
  enableFullFunctionalTest()
  enableCrossBrowserTest()


  after('fortify-scan') {
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/Fortify Scan/**/*'
  }

  after('fullFunctionalTest') {
    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/functional/allure",
      reportFiles          : "index.html",
      reportName           : "Functional Test Report"
    ]
  }

  after('crossBrowserTest') {
    publishHTML target: [
      allowMissing         : true,
      alwaysLinkToLastBuild: true,
      keepAll              : true,
      reportDir            : "test-output/cross-browser/allure",
      reportFiles          : "index.html",
      reportName           : "Cross browser Test Report"
    ]
  }
}
