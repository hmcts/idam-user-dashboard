{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "macros/csrf.njk" import csrfProtection %}
{% from "macros/breadcrumb.njk" import breadcrumb %}
{% from "macros/errorSummary.njk" import errorSummary %}

{% extends "template.njk" %}

{% block beforeContent %}
  {{ super() }}
  {{ breadcrumb([
    ['Manage Users']
  ]) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ errorSummary(error) }}
      <h1 class="govuk-heading-l">Manage Users</h1>
      <form method="POST" action="/user-results">
        {{ csrfProtection(csrfToken) }}
        {{ govukInput({
          label: {
            text: "Search for an existing user",
            classes: "govuk-label govuk-label--m",
            isPageHeading: true
          },
          hint: {
            text: "Please enter the email address of the user you wish to manage"
          },
          errorMessage: { text: error.email.message } if error.email,
          classes: "govuk-input govuk-!-width-three-quarters",
          id: "email",
          name: "email",
          value: search
        }) }}
        {{ govukButton({
          text: "Search"
        }) }}
      </form>

      {% if content.result %}
        <p class="govuk-body-m govuk-!-font-weight-bold">{{ content.result }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}
