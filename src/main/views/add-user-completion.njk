{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "macros/csrf.njk" import csrfProtection %}
{% from "macros/breadcrumb.njk" import breadcrumb %}
{% from "macros/errorSummary.njk" import errorSummary %}

{% extends "template.njk" %}

{% block beforeContent %}
  {{ super() }}
  {{ breadcrumb([
    ['Add user email', urls.ADD_USERS_URL],
    ['Add user details'],
    ['Add user roles'],
    ['User registration completion']
  ]) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      {{ govukPanel({
        titleText: "User registered"
      }) }}
      <br>
      <p class="govuk-body">The user has been registered and should now receive an email.</p>
      <p class="govuk-body">They will need to activate their account using the link in this email before they can sign-in.</p>
    </div>
  </div>

  <div class="govuk-grid-row">
    <form method="REDIRECT" action="{{ urls.HOME_URL }}">
      {{ csrfProtection(csrfToken) }}
      <button type="submit" class="govuk-back-link">Return to main menu</button>
    </form>
  </div>
{% endblock %}
