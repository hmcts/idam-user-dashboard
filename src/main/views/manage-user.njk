{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "macros/csrf.njk" import csrfProtection %}
{% from "macros/breadcrumb.njk" import breadcrumb %}
{% from "macros/errorSummary.njk" import errorSummary %}

{% extends "template.njk" %}

{% block pageTitle %}
  Manage User - IDAM User Dashboard - GOV.UK
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {{ breadcrumb([
    ['Manage user']
  ]) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      {{ errorSummary(error) }}
      <h1 class="govuk-heading-l">Manage User</h1>
      <form method="POST" action="{{ urls.USER_DETAILS_URL }}">
        {{ csrfProtection(csrfToken) }}
        {{ govukInput({
          label: {
            text: "Search for an existing user",
            classes: "govuk-label govuk-label--m",
            isPageHeading: true
          },
          hint: {
            text: "Please enter the email address, user ID or SSO ID of the user you wish to manage"
          },
          errorMessage: { text: error.search.message } if error.search,
          classes: "govuk-input govuk-!-width-three-quarters",
          id: "search",
          name: "search",
          value: search
        }) }}
        {{ govukButton({
          text: "Search"
        }) }}
      </form>

      {% if content.result %}
        {{ govukWarningText({
          text: content.result,
          iconFallbackText: "Warning"
        }) }}
      {% endif %}
    </div>
  </div>
{% endblock %}
