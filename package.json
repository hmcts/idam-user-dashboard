{
  "name": "idam-user-dashboard",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.smoke.config.js",
    "test:crossbrowser": "npm-run-all -scl test:crossbrowser:e2e test:crossbrowser:report",
    "test:crossbrowser:e2e": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs --config src/test/cross-browser/saucelabs.conf.js run-multiple --all",
    "test:crossbrowser:report": "allure generate --clean -c test-output/cross-browser/reports/**/ -o test-output/cross-browser/allure",
    "test:functional": "npm-run-all -scl test:functional:min test:functional:report test:pa11y",
    "test:fullfunctional": "npm-run-all -scl test:functional:all test:functional:report test:pa11y",
    "test:functional:min": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs --config ./src/test/functional/codecept.conf.js run-workers 8 parallel  --grep \"(?=.*)^(?!.*@Nightly)\"",
    "test:functional:all": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs --config ./src/test/functional/codecept.conf.js run-workers 8 parallel",
    "test:functional:report": "allure generate --clean -c test-output/functional/reports -o test-output/functional/allure",
    "test:a11y": "echo 'nope' && exit 0",
    "test:pa11y": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.a11y.config.js --maxWorkers 1",
    "sonar-scan": "sonar-scanner",
    "fortifyScan": "./java/gradlew -p java fortifyScan",
    "cichecks": "yarn && npm-run-all -pl build lint test"
  },
  "dependencies": {
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.7.0",
    "@hmcts/nodejs-logging": "^3.0.2",
    "@hmcts/properties-volume": "^0.0.13",
    "@types/config": "^0.0.41",
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/es6-promisify": "^6.0.1",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.0",
    "@types/glob": "^7.2.0",
    "@types/helmet": "^4.0.0",
    "@types/jest-when": "^2.7.4",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.14",
    "@types/nunjucks": "^3.2.1",
    "@types/require-directory": "^2.1.1",
    "@types/serve-favicon": "^2.5.1",
    "@types/session-file-store": "^1.2.2",
    "applicationinsights": "^2.2.0",
    "awilix": "^6.1.0",
    "axios": "^0.25.0",
    "config": "^3.3.7",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "date-and-time": "^2.1.0",
    "express": "^4.17.2",
    "express-nunjucks": "^2.2.5",
    "express-session": "^1.17.2",
    "glob": "^7.1.6",
    "helmet": "^5.0.2",
    "govuk-frontend": "^4.0.0",
    "jest-when": "^3.5.0",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.20",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.2",
    "redis": "^3.1.2",
    "request": "^2.88.2",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "session-file-store": "^1.5.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
