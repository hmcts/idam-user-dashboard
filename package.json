{
  "name": "idam-user-dashboard",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "sass-lint -v -q && eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:routes": "jest -c jest.routes.config.js",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.smoke.config.js",
    "test:fullfunctional": "docker run --rm --volume $PWD:/home/app --workdir='/home/app' mcr.microsoft.com/playwright:v1.15.2-focal bash -x src/test/docker-yarn.sh test:fullfunctional:docker $UID && npm run test:allure-report",
    "test:fullfunctional:docker": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs --config ./src/test/functional/codecept.conf.js run-workers 8 parallel",
    "test:functional": "docker run --rm --volume $PWD:/home/app --workdir='/home/app' mcr.microsoft.com/playwright:v1.15.2-focal bash -x src/test/docker-yarn.sh test:functional:docker $UID && npm run test:allure-report",
    "test:functional:docker": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs --config ./src/test/functional/codecept.conf.js run-workers 8 parallel  --grep \"(?=.*)^(?!.*@Nightly)\"",
    "test:a11y": "echo 'nope' && exit 0",
    "test:allure-report": "allure generate --clean -c test-output/functional/reports -o test-output/functional/allure",
    "test:allure-report-crossbrowser": "allure generate --clean -c test-output/cross-browser/reports -o test-output/cross-browser/allure",
    "sonar-scan": "sonar-scanner",
    "fortifyScan": "./java/gradlew -p java fortifyScan",
    "cichecks": "yarn && yarn build && yarn lint  && yarn test && yarn test:routes &&  yarn test:a11y",
    "test:crossbrowser:docker": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs run-multiple --all -c ./src/test/cross-browser/saucelabs.conf.js",
    "test:crossbrowser": "docker run --rm --volume $PWD:/home/app --workdir='/home/app' mcr.microsoft.com/playwright:v1.15.2-focal bash -x src/test/docker-yarn.sh test:crossbrowser:docker $UID && npm run test:allure-report-crossbrowser"
  },
